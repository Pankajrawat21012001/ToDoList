<!DOCTYPE html>
<html lang="en" dir="ltr">

<%- include("head");-%>

<body>

  <div class="box" id="heading">
    <h1><%=toDoheading%></h1>
  </div>

  <div class="box">
    <% newListItem.forEach(function(Item){ %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name= "checkbox" value="<%=Item._id%>" onChange = "this.form.submit()">
        <p><%=Item.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%=toDoheading%>"></input>
    </form>
    <% }); %>


    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
      <button type="submit" name='button' value=<%=toDoheading%>>+</button>
    </form>

  </div>

  <%-include("footer");-%>
</body>

</html>
